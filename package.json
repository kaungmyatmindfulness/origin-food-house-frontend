{
  "name": "origin-food-house",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@app/api",
    "dev:rms": "turbo run dev --filter=@app/restaurant-management-system",
    "dev:sos": "turbo run dev --filter=@app/self-ordering-system",
    "dev:admin": "turbo run dev --filter=@app/admin-platform",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "test:cov": "turbo run test:cov",
    "generate:api": "npm run generate --workspace=@repo/api",
    "db:generate": "turbo run db:generate --filter=@app/api",
    "db:migrate": "turbo run db:migrate --filter=@app/api",
    "db:seed": "turbo run db:seed --filter=@app/api",
    "db:studio": "turbo run db:studio --filter=@app/api"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "shadcn": "^3.5.0",
    "turbo": "^2.6.1",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@app/admin-platform": "^0.1.0",
    "@app/api": "^0.0.1",
    "@app/restaurant-management-system": "^0.1.0",
    "@app/self-ordering-system": "^0.1.0"
  }
}
