{
  "name": "origin-food-house-frontend",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate:api": "npm run generate --workspace=@repo/api"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "shadcn": "^3.4.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@app/restaurant-management-system": "^0.1.0",
    "@app/self-ordering-system": "^0.1.0",
    "@app/admin-platform": "^0.1.0"
  }
}
