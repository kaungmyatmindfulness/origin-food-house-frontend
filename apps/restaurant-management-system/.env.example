# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_CUSTOMER_APP_URL=http://localhost:3001

# Auth0 Configuration (SSO)
# Get these values from Auth0 Dashboard: https://manage.auth0.com/
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://api.origin-food-house.com
NEXT_PUBLIC_AUTH0_REDIRECT_URI=http://localhost:3002/auth/callback

NEXT_PUBLIC_HUBSPOT_PORTAL_ID=xxxxxxxx
NEXT_PUBLIC_HUBSPOT_CONTACT_US_FORM_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# AWS S3 Configuration (for image fetching)
# These values must match your backend S3 configuration
NEXT_PUBLIC_AWS_S3_BUCKET=your-bucket-name
NEXT_PUBLIC_AWS_REGION=us-east-1