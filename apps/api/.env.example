# =============================================================================
# Origin Food House Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# Database Configuration
# =============================================================================
# For local development (recommended approach):
# 1. Start PostgreSQL with: npm run docker:up
# 2. Use localhost as the hostname since app runs on host machine
DATABASE_URL="postgresql://myuser:mypassword@localhost:5432/mydb"

# Individual PostgreSQL settings (used by docker-compose)
POSTGRES_USER="myuser"
POSTGRES_PASSWORD="mypassword"
POSTGRES_DB="mydb"
POSTGRES_PORT=5432

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV="development"
PORT=3000
APP_PORT=3000

# Debug port for Node.js debugger (used in development)
DEBUG_PORT=9229

# =============================================================================
# Auth0 Configuration (Required)
# =============================================================================
# Get these values from your Auth0 dashboard
AUTH0_DOMAIN="your-tenant.auth0.com"
AUTH0_CLIENT_ID="your-client-id"
AUTH0_CLIENT_SECRET="your-client-secret"
AUTH0_AUDIENCE="https://api.your-domain.com"
AUTH0_ISSUER="https://your-tenant.auth0.com/"
AUTH0_CALLBACK_URL="http://localhost:3000/auth/callback"
AUTH0_MANAGEMENT_API_TOKEN=""  # Optional: For user management operations

# =============================================================================
# Admin Platform Auth0 Configuration (Separate Tenant)
# =============================================================================
# Admin platform uses a dedicated Auth0 tenant for enhanced security
# Get these values from your Auth0 admin tenant dashboard
ADMIN_AUTH0_DOMAIN="admin-originfoodhouse.auth0.com"
ADMIN_AUTH0_CLIENT_ID="your-admin-client-id"
ADMIN_AUTH0_CLIENT_SECRET="your-admin-client-secret"
ADMIN_AUTH0_AUDIENCE="https://api.admin.originfoodhouse.com"
ADMIN_AUTH0_ISSUER="https://admin-originfoodhouse.auth0.com/"

# =============================================================================
# Internal JWT Configuration (For Auth0 to Backend communication)
# =============================================================================
# Used for generating internal JWTs after Auth0 validation
JWT_SECRET="your-internal-jwt-secret-change-in-production"
JWT_EXPIRES_IN="1d"

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins
# Include admin platform URL (port 3003) for cross-origin requests
CORS_ORIGIN="http://localhost:3001,http://localhost:3002,http://localhost:3003"

# =============================================================================
# AWS S3 Configuration (Optional - for file uploads)
# =============================================================================
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# =============================================================================
# Email Configuration (Optional - for notifications)
# =============================================================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"
# EMAIL_FROM="noreply@yourapp.com"

# =============================================================================
# Session Configuration (Optional)
# =============================================================================
# SESSION_SECRET="your-session-secret"

# =============================================================================
# Rate Limiting Configuration (Optional)
# =============================================================================
# Requests per time window
# THROTTLE_TTL=60
# THROTTLE_LIMIT=10

# =============================================================================
# File Upload Configuration (Optional)
# =============================================================================
# MAX_FILE_SIZE=5242880  # 5MB in bytes
# UPLOAD_PATH="./uploads"

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# LOG_LEVEL="info"  # error, warn, info, debug
# LOG_FORMAT="json"  # json or pretty

# =============================================================================
# Docker Services Configuration (Optional)
# =============================================================================
# These are used by docker-compose.yml for service configuration
# Docker provides ONLY infrastructure services (PostgreSQL)
# The application runs natively on your machine for better DX
